{
  "name": "chiron",
  "version": "0.7.0",
  "description": "Modern static site generator with built-in themes, plugins, and PWA support",
  "main": "builder/index.js",
  "scripts": {
    "build": "node builder/index.js",
    "dev": "node builder/index.js --watch",
    "dev:server": "npx browser-sync start --server docs --files 'docs/**/*' --no-notify --port 3000",
    "preview": "npx serve docs",
    "clean": "node -e \"require('fs').rmSync('docs', {recursive: true, force: true})\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint builder/ tests/",
    "lint:fix": "eslint builder/ tests/ --fix",
    "docs": "jsdoc -c jsdoc.json",
    "docs:watch": "nodemon --watch builder --ext js --exec npm run docs"
  },
  "keywords": [
    "static-site-generator",
    "ssg",
    "markdown",
    "blog",
    "documentation",
    "pwa",
    "github-pages",
    "jamstack"
  ],
  "author": "Agilira",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^4.1.0",
    "ejs": "^3.1.10",
    "fast-glob": "^3.3.3",
    "flexsearch": "^0.8.212",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "marked": "^16.4.1",
    "sharp": "^0.34.5",
    "terser": "^5.44.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.38.0",
    "@fontsource/manrope": "^5.2.8",
    "@fontsource/noto-sans": "^5.2.10",
    "@fontsource/poppins": "^5.2.7",
    "@fontsource/roboto": "^5.2.8",
    "@fontsource/work-sans": "^5.2.8",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "chokidar": "^4.0.3",
    "docdash": "^2.0.2",
    "eslint": "^9.38.0",
    "fs-extra": "^11.3.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdoc": "^4.0.5",
    "lightningcss": "^1.30.2",
    "lucide-static": "^0.552.0"
  },
  "overrides": {
    "glob": "^10.4.5",
    "inflight": "npm:@npmcli/fs@^3.1.0"
  }
}
