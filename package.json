  "license": "MIT",
  "dependencies": {
    "flexsearch": "^0.8.212",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "marked": "^11.1.1"
  },
  "devDependencies": {
    "chokidar": "^3.5.3"
  }
}
