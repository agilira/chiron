<footer class="site-footer" role="contentinfo">
    <div class="footer-container">
        <div class="footer-content">
            <div class="footer-left">
                <p class="footer-copyright">
                    &copy; <span class="copyright-year"><%- copyrightYear %></span> <span class="copyright-holder"><%- copyrightHolder %></span>. <%= t('footer_copyright') %>.
                </p>
                <div class="footer-legal">
                    <%- footerLegalLinks %>
                </div>
            </div>
            <div class="footer-right">
                <a href="<%- companyUrl %>" target="_blank" rel="noopener" class="footer-logo-link">
                    <img src="<%- logoFooterLight %>" alt="<%- logoAlt %>" class="footer-logo footer-logo-light" loading="lazy">
                    <img src="<%- logoFooterDark %>" alt="<%- logoAlt %>" class="footer-logo footer-logo-dark" loading="lazy">
                </a>
            </div>
        </div>
    </div>
</footer>
