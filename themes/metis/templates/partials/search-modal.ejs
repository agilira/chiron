<!-- Search Modal -->
<div class="search-modal" id="searchModal" aria-hidden="true">
    <div class="search-modal-overlay" id="searchModalOverlay"></div>
    <div class="search-modal-content" role="dialog" aria-modal="true" aria-labelledby="searchModalTitle">
        <div class="search-modal-header">
            <h2 id="searchModalTitle" class="search-modal-title"><%= t('search_modal_title') %></h2>
            <button type="button" class="search-modal-close" id="searchModalClose" <%= aria('aria_search_close') %>>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
        <div class="search-modal-body">
            <div class="search-container" id="searchContainer" role="search">
                <input 
                    type="search" 
                    id="searchInput" 
                    class="search-input" 
                    placeholder="<%= t('search_placeholder') %>" 
                    <%= aria('aria_search_input') %>
                    aria-autocomplete="list"
                    aria-controls="searchResults"
                    aria-expanded="false"
                    autocomplete="off"
                >
                <button 
                    type="button" 
                    class="search-clear-btn" 
                    id="searchClearBtn" 
                    <%= aria('aria_search_clear') %>
                    hidden
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                        <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
                <div 
                    class="search-results" 
                    id="searchResults" 
                    role="listbox"
                    <%= aria('aria_search_results') %>
                    hidden
                ></div>
            </div>
        </div>
    </div>
</div>
